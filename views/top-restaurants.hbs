{{> restaurant-tabs route='topRestaurants'}}
<h1>人氣餐廳</h1>
<hr />
<div class="container">
  <div class="row justify-content-center"> <!-- Centers the cards horizontally -->
    {{#each restaurants}}
    <div class="card col-md-8 mb-3"> <!-- Adjust the width with col-md-8 -->
      <div class="row">
        <div class="col-md-4">
          <img class="img-responsive center-block mb-5" src="{{this.image}}"
            style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        </div>
        <div class="col-md-8 mb-5 mt-3">
          <h3><a href="/restaurants/{{this.id}}">{{this.name}}</a></h3>
          <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
          <br><br>
          <p style="white-space: break-spaces;">{{this.description}}</p>
          <a href="/restaurants/{{this.id}}" class="btn btn-primary">Show</a>
          {{#if isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>